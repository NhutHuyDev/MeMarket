generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_CONNECTION_STR")
}

model Post {
  id          String    @id
  slug        String    @unique
  title       String
  author      String?
  content     String?
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map(name: "posts") // use "posts" as the table name
}